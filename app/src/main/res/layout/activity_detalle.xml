<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="vertical"
    tools:context=".View.DetalleActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagePaint"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/titlePaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Titulo de la Obra"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tituloArtista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Artista: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/tituloArtista"
                    android:text="Nombre del Artista" />

                <TextView
                    android:id="@+id/tituloNacionalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tituloArtista"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Nacionalidad: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nationalityArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tituloNacionalidad"
                    android:layout_toEndOf="@+id/tituloNacionalidad"
                    android:text="Nacionalidad del Artista" />

                <TextView
                    android:id="@+id/tituloInfluencias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tituloNacionalidad"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Influenciado por: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/influencedByArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tituloInfluencias"
                    android:layout_toEndOf="@+id/tituloInfluencias"
                    android:text="Influencias del Artista" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>